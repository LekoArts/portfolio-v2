{
  "include": [
    "packages/**/*",
    "www/**/*",
    ".eslintrc.js",
    "lint-staged.config.js",
    "playwright/**/*",
    "playwright.config.ts",
    "vitest.config.ts",
    "vitest/setup.ts",
    "cspell.config.js"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["dom", "es2020"],
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  }
}
