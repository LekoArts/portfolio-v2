{
  "name": "portfolio-v2",
  "description": "Home of lekoarts.de",
  "version": "1.0.0",
  "private": true,
  "author": "LekoArts <hello@lekoarts.de>",
  "license": "GPLv3",
  "workspaces": [
    "packages/*",
    "www"
  ],
  "scripts": {
    "develop": "yarn workspace www develop",
    "clean": "yarn workspace www clean",
    "build": "yarn workspace www build",
    "serve": "yarn workspace www serve",
    "tsc": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx,.js",
    "lint:fix": "yarn lint --fix",
    "format": "prettier \"**/*.{md,mdx,json,yaml}\" --write",
    "new-post": "ts-node packages/scripts/new-post.ts",
    "new-garden": "ts-node packages/scripts/new-garden.ts",
    "prepare": "husky install",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --runInBand"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/lodash": "^4.14.171",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-jest": "^27.0.6",
    "babel-preset-gatsby": "^1.9.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  }
}
